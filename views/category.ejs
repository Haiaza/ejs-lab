<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category.charAt(0).toUpperCase() + category.slice(1) %></title>
</head>
<body>
    <%-  include('./partials/nav')%>
    <h1><%= category.charAt(0).toUpperCase() + category.slice(1) %></h1>
    <ul>
        <% items.forEach(item => { %>
            <li>
                <h2><%= item.name %></h2>
                <p>Price: $<%= item.price %></p>
                <p><%= item.details %></p>
                <% if (item.rating === 5) { %>
                    <p>Rating: <%= item.rating %> stars<br>⭐Guest Favorite⭐</p>
                <% } else { %>
                    <%= item.rating %> out of 5 stars<br><br>
            </li>
            <% }}) %>
        </ul>
        
    
</body>
</html>